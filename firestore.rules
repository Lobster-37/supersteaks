rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthed() { 
      return request.auth != null; 
    }
    
    function isAdmin() { 
      return isAuthed() && request.auth.token.admin == true; 
    }

    // Tournaments - anyone can read, only Cloud Functions write
    match /tournaments/{tournamentId} {
      allow read: if true; // Public read access
      allow create, update, delete: if false; // Cloud Functions only
    }

    // Lobbies - anyone can read, Cloud Functions write only
    match /lobbies/{lobbyId} {
      allow read: if true; // Public read access
      allow create, update, delete: if false; // Cloud Functions only
    }

    // Team assignments - users can read their own assignments
    match /teamAssignments/{assignmentId} {
      allow read: if isAuthed() && resource.data.userId == request.auth.uid;
      
      // No direct writes - only Cloud Functions
      allow write: if false;
    }

    // User profiles - users can read public info, write only their own
    match /users/{userId} {
      allow read: if isAuthed();
      allow write: if isAuthed() && request.auth.uid == userId;
      allow delete: if false;
    }

    // Audit log - read only for admins, Cloud Functions write
    match /auditLog/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Cloud Functions only
    }

    // Backups - admin only
    match /backups/{backupId} {
      allow read: if isAdmin();
      allow write: if false; // Cloud Functions only
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
