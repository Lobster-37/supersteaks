rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() { return request.auth != null; }

    // Tournaments - publicly readable, server-managed
    match /tournaments/{tournamentId} {
      allow read: if isAuthed();
      allow create, update, delete: if false; // Cloud Function or admin only
    }

    // Lobbies - readable by authenticated users, server-managed via Cloud Function
    match /lobbies/{lobbyId} {
      allow read: if isAuthed();
      allow create, update, delete: if false; // Cloud Function only
    }

    // Team assignments - readable by authenticated users, written by Cloud Function only
    match /teamAssignments/{assignmentId} {
      allow read: if isAuthed();
      // Legacy support: allow direct writes for old contest-based flow (if client still uses)
      allow create: if isAuthed()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.team is string
                    && request.resource.data.assignedAt != null;
      // Cloud Function updates are handled via custom claims/service account
      allow update, delete: if false;
    }

    // User profiles collection
    match /users/{userId} {
      allow read: if isAuthed();
      allow write: if isAuthed() && request.auth.uid == userId;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
